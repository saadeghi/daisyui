{
  "name": "duskmoon-ui-monorepo",
  "private": true,
  "packageManager": "bun@1.2.8",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/duskmoonui && bun run --bun build",
    "build:dev": "cd packages/duskmoonui && bun run --bun build --dev",
    "build:docs": "cd packages/duskmoonui && bun run --bun build:simple && cd ../docs && bun run --bun build",
    "build:docs:dev": "bun run --bun build:dev && cd packages/docs && bun run --bun build",
    "dev": "bun run --bun build:dev && cd packages/docs && bun run --bun dev",
    "play": "bun run --bun build:dev && cd packages/playground && bun run --bun dev",
    "logs": "bun run --bun build:dev && cd packages/logs && bun run --bun dev",
    "format": "bunx -y prettier 'packages/{duskmoonui,docs}/{src,functions}/**/*.{css,js,json,svelte}' --write",
    "lang:diff": "cd packages/docs && bun run --bun langdiff",
    "lang:clean": "bun packages/docs/src/lib/scripts/cleanTranslations.js",
    "lang:sort": "bun packages/docs/src/lib/scripts/sortTranslations.js",
    "lang:fill": "bun packages/docs/src/lib/scripts/fillTranslations.js",
    "lang:add": "bun packages/docs/src/lib/scripts/addTranslations.js",
    "bundle": "bun packages/duskmoonui/functions/bundle.js",
    "lint": "bunx -y oxlint@latest --ignore-pattern packages/playground",
    "test": "bun test",
    "api": "cd ../duskmoonui-api && bun run dev",
    "wallace": "bunx -y wallace-cli packages/duskmoonui/duskmoonui.css",
    "update:tw": "bun i tailwindcss@latest @tailwindcss/cli@latest @tailwindcss/vite@latest",
    "publish:alpha": "bun run --bun build && cd packages/duskmoonui && bun publish --tag=alpha",
    "publish:beta": "bun run --bun build && cd packages/duskmoonui && bun publish --tag=beta"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "culori": "^4.0.2",
    "lightningcss": "^1.30.1",
    "postcss": "^8.5.6",
    "postcss-js": "4.0.1",
    "postcss-selector-parser": "7.1.0",
    "prettier": "^3.6.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.12"
  }
}
