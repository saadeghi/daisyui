{
  "type": "module",
  "scripts": {
    "dev": "npm run createStyleHandlerComponent:dev && vite dev --port 3000 --open",
    "build": "npm i daisyui@latest && npm run createStyleHandlerComponent:prod && NODE_ENV=production vite build",
    "preview": "vite preview",
    "createStyleHandlerComponent:dev": "echo '<script>import \"@components/StyleDevelopment.svelte\"</script>' > src/components/StyleHandler.svelte",
    "createStyleHandlerComponent:prod": "echo '<script>import \"@components/StyleProduction.svelte\"</script>' > src/components/StyleHandler.svelte",
    "prettier": "prettier --write '**/*.{js,svelte,md,json,html,css}' --config ../.prettierrc --ignore-path ../.prettierignore",
    "langdiff": "json-diff --keys-only --raw-json ./src/translation/en.json ./src/translation/jp.json"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^2.0.1",
    "@sveltejs/kit": "^1.15.1",
    "@tailwindcss/typography": "0.5.9",
    "autoprefixer": "10.4.14",
    "json-diff": "^1.0.3",
    "mdsvex": "^0.10.6",
    "postcss": "8.4.21",
    "postcss-nesting": "11.2.2",
    "prettier": "2.8.7",
    "prettier-plugin-svelte": "2.10.0",
    "prettier-plugin-tailwindcss": "0.2.6",
    "prism-themes": "1.9.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "svelte": "^3.58.0",
    "svelte-preprocess": "^5.0.3",
    "svelte-prism": "1.1.6",
    "svelte-typeahead": "^4.4.1",
    "tailwindcss": "^3.3.1",
    "theme-change": "2.5.0"
  },
  "dependencies": {
    "color": "^4.2.3",
    "daisyui": "^2.51.5",
    "emoji-unicode": "^2.0.1",
    "lodash.debounce": "^4.0.8",
    "nanoid": "^4.0.2",
    "randomcolor": "^0.6.2",
    "svelte-countup": "^0.2.6",
    "svg-emojis": "^0.0.8"
  }
}